.search {
  box-shadow: 0 1px 10px 0 rgba(0, 0, 0, 0.1);
  background-color: #f5f5f5;
  padding: 5px 15px;
}
.search .search-btn {
  width: 700rpx;
  font-size: 16px;
  height: 30px;
  line-height: 30px;
  text-align: center;
  border-radius: 20px;
  color: #ccc;
  background: #fff;
  box-shadow: inset 0 0.05rem 5px rgba(0, 0, 0, 0.02),
    inset 0 2px 8px rgba(0, 0, 0, 0.15), inset 0 0 0 0.05rem rgba(0, 0, 0, 0.1),
    0 0.05rem 0.05rem 0 hsla(0, 0%, 100%, 0.1);
  -webkit-border-radius: 20px;
  -moz-border-radius: 20px;
  -ms-border-radius: 20px;
  -o-border-radius: 20px;
}
