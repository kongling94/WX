.section {
  width: 750rpx;
  background-color: #f5f5f5;
}
.section-wrap {
  display: flex;
  padding: 10px;
}
.section-wrap > view {
  width: 50%;
  text-align: center;
}
.section-left {
  flex-direction: column;
}
.section-right {
  flex: 1;
  padding-left: 10px;
  border-radius: 8px;
}
.section-left-item {
  /* padding: 20px; */
  width: 100%;
  /* height: 100%; */
  border-radius: 8px;
  -webkit-border-radius: 8px;
  -moz-border-radius: 8px;
  -ms-border-radius: 8px;
  -o-border-radius: 8px;
  /* background-color: #fff; */
  /* margin-bottom: 10px; */
}
.section-left-item > image,
.section-right > image {
  width: 100%;
  height: 100%;
}
.section-left-item:last-child {
  margin-bottom: auto;
}
